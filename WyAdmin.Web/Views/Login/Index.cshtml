@{
    Layout = null;
    ViewBag.Title = "WYAdmin";
}
<!DOCTYPE html>
<html lang="zh-CN" style="overflow: hidden;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp">
    <title>@ViewBag.Title</title>
    <link href="~/Content/default/core.css" rel="stylesheet" />
    <link href="~/Content/default/site.css" rel="stylesheet" />
    <link href="~/Content/default/animate.css" rel="stylesheet" />
    <link href="~/Content/default/index.css" .css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/layer/layer.js"></script>
    <script src="~/Scripts/default/login.js"></script>
    <script src="~/Scripts/default/admin.js"></script>
</head>
<body>
    <div id="login-form">
        <div class="login-modal">
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="login-panel">
                    <h1 class="text-center" style="font-size: 25px;">@ViewBag.Title</h1>
                    <div class="container-fluid">
                        <div class="pt-50">
                            <div class="form-group form-material">
                                <input type="text" class="form-control" id="NameVal" placeholder="请输入用户名">
                            </div>
                            <div class="form-group form-material">
                                <input type="password" class="form-control" id="PwdVal" placeholder="请输入密码">
                            </div>
                            <a class="btn btn-block btn-primary btn-lg mt-60" href="javascript:;" onclick="App.Checked();">登录</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $(document).keydown(function (e) {
                if (e.which == 13) App.Checked();
            });
        });
        var App = {
            Checked: function () {
                let nameVal = $("#NameVal").val();
                let pwdVal = $("#PwdVal").val();
                if (!nameVal) return admin.msg("请输入用户名", "警告");
                if (!pwdVal) return admin.msg("请输入密码", "警告");
                admin.ajax({
                    url: "/Login/Signin",
                    data: {
                        nameVal: nameVal,
                        pwdVal: pwdVal,
                    },
                    success: function (data) {
                        if (data.result == 1) {
                            console.log(data.url);
                            admin.loading.start();
                            window.location = data.url;
                        }

                    }
                });
            }
        };
    </script>
</body>
</html>




